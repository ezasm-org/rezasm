{
  "name": "rezasm-web",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all -p tailwind-dev vite-dev",
    "build": "npm run tailwind-build && npm run vite-build ",
    "preview": "vite preview",
    "format": "eslint --fix",
    "tailwind-dev": "tailwindcss -i ./src/styles.css -o ./dist/output.css --watch",
    "tailwind-build": "tailwindcss -i ./src/styles.css -o ./dist/output.css",
    "vite-dev": "npm run wasm-dev && vite dev",
    "vite-build": "npm run wasm-build && vite build",
    "wasm-dev": "wasm-pack build -d ../../dist/wasm --target web --dev rezasm-app/rezasm-wasm/",
    "wasm-build": "wasm-pack build -d ../../dist/wasm --target web --dev rezasm-app/rezasm-wasm/"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.4.0",
    "@codemirror/state": "^6.2.1",
    "codemirror": "^6.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-plugin-top-level-await": "^1.3.1",
    "vite-plugin-wasm": "^3.2.2",
    "vite-plugin-wasm-pack": "^0.1.12",
    "webpack-cli": "^5.1.4",
    "webworker-promise": "^0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.17",
    "@tauri-apps/cli": "^1.4.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.48.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.4"
  }
}
